      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      x:Name="myRoot"
        Title="Match" Height="1000" Width="1383" xmlns:my="clr-namespace:ExtendedGrid.ExtendedGridControl;assembly=ExtendedGrid">
    <Grid Height="1320" Width="1345">
        <Label Content="Number of purchase order lines not current matched:" Height="28" Margin="22,10,0,0" Name="label1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="297" />
        <Label Content="Label" Height="28" HorizontalAlignment="Left" Margin="324,10,0,0" Name="lblPOCount" VerticalAlignment="Top" Width="97" />
        <!--<DataGrid AutoGenerateColumns="True" Height="322" HorizontalAlignment="Left" Margin="32,82,0,0" Name="extendedDataGrid1" VerticalAlignment="Top" Width="905" />-->
        <my:ExtendedDataGrid AutoGeneratedColumns="extendedDataGrid1_AutoGeneratedColumns_1"  HideColumnChooser="False" CanUserReorderRows="True" CanUserReorderColumns="True" AutoGeneratingColumn="extendedDataGrid1_AutoGeneratingColumn" IsReadOnly="True" Height="441" AutoGenerateColumns="True" HorizontalAlignment="Left" Margin="22,43,0,0" Name="extendedDataGrid1" VerticalAlignment="Top" Width="617" />
        <Label Content="Number of invoicelines not current matched:" Height="28" HorizontalAlignment="Left" Margin="754,10,0,0" Name="label2" VerticalAlignment="Top" Width="294" />
        <Label Content="Label" Height="28" HorizontalAlignment="Left" Margin="1009,10,0,0" Name="lblNoOfRows" VerticalAlignment="Top" Width="97" />
        <Label Content="Run match now:" Height="28" HorizontalAlignment="Left" Margin="573,505,0,0" Name="lblRun" VerticalAlignment="Top" Width="97" />
        <Button Content="Run" Height="23" HorizontalAlignment="Right" Margin="0,505,600,0" Name="butRunMatch" VerticalAlignment="Top" Width="75" Click="butRunMatch_Click"  />
        <my:ExtendedDataGrid AutoGeneratedColumns="ExtendedDataGrid1_AutoGeneratedColumns"  BeginningEdit="extendedDataGrid2_BeginningEdit" HideColumnChooser="False" CanUserReorderRows="True" CanUserReorderColumns="True" AutoGeneratingColumn="extendedDataGrid2_AutoGeneratingColumn" IsReadOnly="True" Height="441" AutoGenerateColumns="True" HorizontalAlignment="Left" Margin="754,43,0,0" x:Name="extendedDataGrid2" VerticalAlignment="Top" Width="550" />
