        <Button Content="Save" Visibility="Hidden" Height="23" HorizontalAlignment="Right" Margin="0,530,344,0" x:Name="butSave" VerticalAlignment="Top" Width="75" Click="butSave_Click"  />
        <ProgressBar Visibility="Hidden" Name="progressBar" HorizontalAlignment="Left" Height="30" Margin="542,556,0,0" VerticalAlignment="Top" Width="319"/>
        <Button Content="Edit" Height="23" HorizontalAlignment="Right" Margin="0,500,1237,0"  VerticalAlignment="Top" Width="86" Name="butSaveChanges" Click="butSaveChanges_Click"  RenderTransformOrigin="2.853,4.478"  />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Right" Margin="0,490,1135,0"  VerticalAlignment="Top" Width="86" x:Name="butCancel" Click="butCancel_Click" Visibility="Hidden" RenderTransformOrigin="2.853,4.478"  />
        <Button Content="Add Credit or Acceptance" Height="23" HorizontalAlignment="Right" Margin="0,490,41,0" VerticalAlignment="Top" Width="145" x:Name="butAddCredit" Click="butAddCredit_Click"  RenderTransformOrigin="2.853,4.478"  />
        <CheckBox Content="Include Credits and Forced Accepts" Name="chkCredits" HorizontalAlignment="Left" Margin="1071,16,0,0" VerticalAlignment="Top" Unchecked="chkCredits_Checked" Checked="chkCredits_Checked"/>
        <Button Content="Hide Order" Height="23" HorizontalAlignment="Right" Margin="0,500,1135,0"  VerticalAlignment="Top" Width="86" x:Name="butHide" Click="butSaveChanges_Copy_Click"  RenderTransformOrigin="2.853,4.478"  />
        <CheckBox Content="Include Hidden" x:Name="chkHidden" HorizontalAlignment="Left" Margin="383,16,0,0" VerticalAlignment="Top" Checked="chkHidden_Checked" Unchecked="chkHidden_Checked" />
        <Label Content="Please note, messages and notes added to purchase order changes are not shown on this page, please see the reports or match manager" HorizontalAlignment="Left" Margin="22,479,0,0" VerticalAlignment="Top" Width="743"/>
    </Grid>
</Page>
