<Page x:Class="Trust.TableAlais"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      x:Name="myRoot"
      d:DesignHeight="300" d:DesignWidth="710"
	Title="TableAlais">

    <Grid Height="298" Width="705">
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="113,12,0,0" Name="comboBox1" VerticalAlignment="Top" Width="191" SelectionChanged="comboBox1_SelectionChanged">
            <ComboBoxItem Name="purchase_orders">Purchase Orders</ComboBoxItem>
            <ComboBoxItem Name="invoices">Invoices</ComboBoxItem>
            <ComboBoxItem Name="lookup_table">Depot Lookup Table</ComboBoxItem>
        </ComboBox>
        <Label Content="Select table name:" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" Width="110" />
        
        <DataGrid ItemsSource="{Binding ElementName=myRoot, Path=FieldList}" AutoGenerateColumns="True" Height="200" Margin="12,64,0,0" Name="dgAlais" VerticalAlignment="Top" HorizontalAlignment="Left" Width="390" AutoGeneratedColumns="dgAlais_AutoGeneratedColumns">

        </DataGrid>
        <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="327,275,0,0" Name="SaveAlaises" VerticalAlignment="Top" Width="75" Click="SaveAlaises_Click" />
        <Label Content="Please note, not all column names can be updated.  Below is a list of the column names that can." Height="28" HorizontalAlignment="Left" Margin="12,41,0,0" Name="label2" VerticalAlignment="Top" Width="739" />
    </Grid>
</Page>
