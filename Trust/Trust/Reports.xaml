            <RadioButton Name="radPO" IsChecked="True"  Content="Purchase Orders" GroupName="type" HorizontalAlignment="Left" Margin="68.5,29,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.085,0.367" Grid.Column="1"/>
